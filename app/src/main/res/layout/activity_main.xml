<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mon.homework1.MainActivity">

    <TextView
        android:layout_width="363dp"
        android:layout_height="62dp"
        android:layout_marginStart="8dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Calculate Temperature"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp"
        />

    <EditText
        android:id="@+id/edtName1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Please Input Number"
        android:padding="25dp"
        android:layout_margin="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnCtoF"
        tools:layout_editor_absoluteY="112dp" />


    <TextView
        android:id="@+id/tv1"
        android:layout_width="334dp"
        android:layout_height="219dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:textSize="50sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="276dp" />

    <Button
        android:id="@+id/btnCtoF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:onClick="submitCtoF"
        android:text="Cal ?C to ?F"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="210dp" />

    <Button
        android:id="@+id/btnFtoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="84dp"
        android:onClick="submitFtoC"
        android:text="Cal ?F to ?C"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="210dp" />


</android.support.constraint.ConstraintLayout>
